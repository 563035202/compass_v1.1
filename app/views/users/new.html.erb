<h1>Sign in</h1>

<%= form_for @user, :url =>users_path do |f| %>
<div>
<%= f.label :name, "Name" %>
<%= f.text_field :name %>	
</div>

<div>
<%= f.label :email, "Email" %>
<%= f.text_field :email %>
</div>

<div>
<%= f.label :password, "Password" %>
<%= f.password_field :password %>
</div>

<div>
<%= f.label :password_confirmation, "Password_Confirmation" %>
<%= f.password_field :password_confirmation %>
</div>

    <div id="create">
       <%= f.submit "Create" %> 	
    </div>

<% end %>

<%=@user.errors.full_messages[0]%>
<p><%= link_to 'Back to index', :controller => 'users', :action => 'index' %></p>	
